{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://openepcis.github.io/openepcis-event-sentry/json-schema-epcis-snippets/sensor-alert-type-0.1.0.json",
    "title": "EPCIS sensorAlertType field",
    "description": "Specifies value for the sensorAlertType field, expressed as a string from the Core Business Vocabulary or as a non-GS1 URI for a user-defined term.",
    "type": "object",
    "properties": {
	"sensorAlertType": {
	    "anyOf": [
		{
		    "$ref": "#/$defs/vocab-nonGS1WebVoc-uri"
		},
		{
		    "type": "string",
		    "enum": [
			"ALARM_CONDITION",
			"ERROR_CONDITION"
		    ]
		}
	    ]
	}
    },
    "$defs": {
	"vocab-nonGS1WebVoc-uri": {
	    "type": "string",
	    "format": "uri",
	    "pattern": "^(?!(https?:\\/\\/gs1\\.org\\/voc\\/|https?:\\/\\/www\\.gs1\\.org\\/voc\\/))"
	}
    }
}
