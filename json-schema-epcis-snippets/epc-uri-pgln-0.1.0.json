{
    "$id": "https://openepcis.github.io/openepcis-event-sentry/json-schema-epcis-snippets/epc-uri-pgln-0.1.0.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Specifies value for the sourceList or destinationList, expressed as a Global Location Number of Party (PGLN) in EPC URI (URN) format, relevant for all sectors.",
    "title": "PGLN EPC URI",
    "definitions": {
        "epc-uri-pgln": {
            "type": "string",
            "pattern": "^urn:epc:id:pgln:(([\\d]{6}\\.\\d{6})|([\\d]{7}\\.\\d{5})|([\\d]{8}\\.\\d{4})|([\\d]{9}\\.\\d{3})|([\\d]{10}\\.\\d{2})|([\\d]{11}\\.\\d{1})|([\\d]{12}\\.))$"
        }
    }
}