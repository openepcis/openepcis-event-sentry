{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://openepcis.github.io/openepcis-event-sentry/json-schema-epcis-snippets/uom-0.1.0.json",
    "title": "EPCIS uom field",
    "description": "Specifies value for the uom field, expressed as string in GS1-recognized unit of measure code format.",
    "type": "object",
    "properties": {
	"uom": {
	    "$ref": "#/$defs/uom"
	}
    },
    "$defs": {
	"uom": {
	    "type": "string",
	    "pattern": "^[A-Z0-9]{2,3}$"
	}
    }
}
