{
    "$id": "https://openepcis.github.io/openepcis-event-sentry/json-schema-epcis-snippets/epc-uri-gdti-0.1.0.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Specifies value for the epcList, childEPCs or parentID field, expressed as a Global Document Type Identifier (GDTI) in EPC URI (URN) format, relevant for all sectors.",
    "title": "GDTI EPC URI",
    "definitions": {
        "epc-uri-gdti": {
            "type": "string",
            "pattern": "^urn:epc:id:gdti:(([\\d]{6}\\.\\d{6})|([\\d]{7}\\.\\d{5})|([\\d]{8}\\.\\d{4})|([\\d]{9}\\.\\d{3})|([\\d]{10}\\.\\d{2})|([\\d]{11}\\.\\d{1})|([\\d]{12}\\.\\.))(\\%2[125-9A-Fa-f]|\\%3[0-9A-Fa-f]|\\%4[1-9A-Fa-f]|\\%5[0-9AaFf]|\\%6[1-9A-Fa-f]|\\%7[0-9Aa]|[!\\')(*+,.0-9:;=A-Za-z_-]){1,20}$"
        }
    }
}