{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://openepcis.github.io/openepcis-event-sentry/json-schema-epcis-snippets/quantity-element-0.1.0.json",
    "title": "EPCIS quantityElement field",
    "description": "Specifies value for the quantityElement definition, expressed as object containing class-level EPC, numeric quantity, and optional unit of measure.",
    "type": "object",
    "properties": {
	"quantityElement": {
	    "$ref": "#/$defs/quantityElement"
	}
    },
    "$defs": {
	"quantityElement": {
	    "type": "object",
	    "properties": {
		"epcClass": {
		    "$ref": "#/$defs/uri"
		},
		"quantity": {
		    "$ref": "#/$defs/decimal"
		},
		"uom": {
		    "$ref": "#/$defs/uom"
		}
	    },
	    "required": [
		"epcClass"
	    ],
	    "additionalProperties": false
	},
	"uri": {
	    "type": "string",
	    "format": "uri"
	},
	"decimal": {
	    "type": "number"
	},
	"uom": {
	    "type": "string",
	    "pattern": "^[A-Z0-9]{2,3}$"
	}
    }
}
