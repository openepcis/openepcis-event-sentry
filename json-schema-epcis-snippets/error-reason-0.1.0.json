{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://openepcis.github.io/openepcis-event-sentry/json-schema-epcis-snippets/error-reason-0.1.0.json",
    "title": "EPCIS error reason field",
    "description": "Specifies value for the errorReason field, expressed as a string from the Core Business Vocabulary or as a URI for a user-defined term identifying the reason for an event error declaration.",
    "type": "object",
    "properties": {
	"errorReason": {
	    "$ref": "#/$defs/reason"
	}
    },
    "$defs": {
	"reason": {
	    "anyOf": [
		{
		    "$ref": "#/$defs/vocab-other-uri"
		},
		{
		    "type": "string",
		    "enum": [
			"did_not_occur",
			"incorrect_data"
		    ]
		}
	    ]
	},
	"vocab-other-uri": {
	    "type": "string",
	    "format": "uri",
	    "pattern": "^(?!(urn:epcglobal:cbv|https?:\\/\\/ref\\.gs1\\.org/cbv\\/))"
	}
    }
}
