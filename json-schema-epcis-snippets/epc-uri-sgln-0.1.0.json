{
    "$id": "https://openepcis.github.io/openepcis-event-sentry/json-schema-epcis-snippets/epc-uri-sgln-0.1.0.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Specifies value for the readPoint, bizLocation, sourceList, destinationList, or epcList field, expressed as a Global Location Number With or Without Extension (SGLN) in EPC URI (URN) format, relevant for all sectors.",
    "title": "SGLN EPC URI",
    "$defs": {
        "epc-uri-sgln": {
            "type": "string",
            "pattern": "^urn:epc:id:sgln:((\\d{6}\\.\\d{6})|(\\d{7}\\.\\d{5})|(\\d{8}\\.\\d{4})|(\\d{9}\\.\\d{3})|(\\d{10}\\.\\d{2})|(\\d{11}\\.\\d{1})|(\\d{12}\\.))\\.(\\%2[125-9A-Fa-f]|\\%3[0-9A-Fa-f]|\\%4[1-9A-Fa-f]|\\%5[0-9AaFf]|\\%6[1-9A-Fa-f]|\\%7[0-9Aa]|[!\\')(*+,.0-9:;=A-Za-z_-]){1,20}$"
        }
    }
}