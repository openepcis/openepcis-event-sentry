{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://openepcis.github.io/openepcis-event-sentry/json-schema-epcis-snippets/child-quantity-list-0.1.0.json",
    "title": "EPCIS childQuantityList field",
    "description": "Specifies set of values for the childQuantityList field, expressed as an array of quantity element objects.",
    "type": "object",
    "properties": {
	"childQuantityList": {
	    "type": "array",
	    "items": {
		"$ref": "#/$defs/quantityElement"
	    }
	}
    },
    "$defs": {
	"quantityElement": {
	    "type": "object",
	    "properties": {
		"epcClass": {
		    "$ref": "#/$defs/uri"
		},
		"quantity": {
		    "$ref": "#/$defs/decimal"
		},
		"uom": {
		    "$ref": "#/$defs/uom"
		}
	    },
	    "required": [
		"epcClass"
	    ],
	    "additionalProperties": false
	},
	"uri": {
	    "type": "string",
	    "format": "uri"
	},
	"decimal": {
	    "type": "number"
	},
	"uom": {
	    "type": "string",
	    "pattern": "^[A-Z0-9]{2,3}$"
	}
    }
}
